  <parameters advanced="false">
    <string-enumeration>
      <name>method</name>
      <longflag>--method</longflag>
      <flag>m</flag>
      <description>Statistics method (euclidean,log-euclidean,pga)</description>
      <default>euclidian</default>
      <element>euclidean</element>
      <element>log-euclidean</element>
      <element>pga</element>
    </string-enumeration>
    <boolean>
      <name>verbose</name>
      <flag>v</flag>
      <longflag>--verbose</longflag>
      <label>Verbose</label>
      <description>produce verbose output</description>
      <default>0</default>
    </boolean>
    <file>
      <name>tensorOutput</name>
      <longflag>--tensor_output</longflag>
      <label>Tensor Output</label>
      <description>Averaged tensor volume</description>
      <channel>output</channel>
    </file>
    <image multiple="true">
      <name>inputs</name>
      <longflag>--inputs</longflag>
      <label>Inputs</label>
      <description>Tensor inputs.</description>
      <channel>input</channel>
    </image>
  </parameters>
